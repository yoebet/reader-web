.word-source(*ngIf='para')
  .text-title([suiCollapse]='!showTitle')
    .book-title(*ngIf='para.book') ({{para.book.code}}) {{para.book.name}}
    ng-template([ngIf]='para.chap')
      .chap-title.pre-wrap {{para.chap.name}}
      .chap-title-zh.pre-wrap([suiCollapse]='!textTrans') {{para.chap.zhName}}
  .word-source-text
    .para-text([innerHTML]='sanitizedContent')
    .ui.small.clearing.hidden.divider
    .para-text([innerHTML]='sanitizedTrans', [suiCollapse]='!textTrans')
